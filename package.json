const express = require('express');
const mongoose = require('mongoose');
const cors = require('cors');

const app = express();

// Basic middleware - no MongoDB connection for now
app.use(cors());
app.use(express.json());

// Test route without MongoDB
app.get('/api', (req, res) => {
  res.json({
    success: true,
    message: 'Kazi Ocha Backend API is working!',
    endpoints: ['/auth', '/jobs', '/health']
  });
});

// Health check without DB
app.get('/api/health', (req, res) => {
  res.json({
    success: true,
    message: 'Server is running (DB connection pending)',
    timestamp: new Date().toISOString()
  });
});

// Simple test routes
app.get('/api/jobs', (req, res) => {
  res.json({
    success: true,
    message: 'Jobs endpoint - DB connection pending',
    jobs: []
  });
});

app.get('/api/auth/test', (req, res) => {
  res.json({
    success: true,
    message: 'Auth endpoint - DB connection pending'
  });
});

// Export the app
module.exports = app;


